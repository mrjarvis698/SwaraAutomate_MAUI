<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwaraAutomate.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="20"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Hello User,"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="50"
                HorizontalOptions="CenterAndExpand" />

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="CenterAndExpand" />

            <Label
                Text="Welcome to Swara-Automate."
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to Swara-Automate"
                FontSize="30"
                HorizontalOptions="CenterAndExpand" />

            <Label
                Text="Please Login or SignUp to Identify Your Identity"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Login Text"
                FontSize="18"
                HorizontalOptions="CenterAndExpand" />

            <Button
                x:Name="CounterBtn"
                Text="Click me"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
